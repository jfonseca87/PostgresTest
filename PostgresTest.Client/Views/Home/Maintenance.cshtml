@model Posts
@{
    ViewData["Title"] = Model.Id > 0 ? "Update Post" : "Create Post";
}

@if (Model.Id > 0)
{
    <h1>Update Post</h1>
}
else
{
    <h1>Create Post</h1>
}

<form asp-controller="Home" asp-action="Maintenance" method="POST">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div style="background-color:#BBC5AA">
        <div class="row d-flex justify-content-center">
            <div class="form-group pt-3 pl-4 pr-4">
                <input type="text" class="form-control" name="Type" placeholder="Type" value="@Model.Type">
                <span style="color:red;">*</span>
            </div>
            <div class="form-group pt-3 pl-4 pr-4">
                <input type="text" class="form-control" name="User_Name" placeholder="Creator Name" value="@Model.User_Name">
                <span style="color:red;">*</span>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Content" cols="70" rows="5" value="@Model.Content">@Model.Content</textarea>
                <span style="color: red;">*</span>
            </div>
        </div>
        <div class="row d-flex pb-3" style="margin-right: 230px;">
            <div class="ml-auto">
                <input type="submit" class="btn btn-outline-success mr-3" value="Save"/>
                <button title="Cancel" class="btn btn-dark mr-3" (click)="resetForm()">
                    Reset Form
                </button>
            </div>
        </div>
    </div>
</form>

@section scripts 
{
    <script>
        $(document).ready(function () {
            
        });
    </script>
}